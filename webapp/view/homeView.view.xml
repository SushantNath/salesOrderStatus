													<Label text="10" design="Bold" class=" sapUiSmallMarginBegin "/>
											</HBox>
											<HBox class="sapUiTinyMargin sapUiTinyMarginTop sapUiMediumMarginBottom" height="auto">
												<Button class="sapUiLargeMarginBegin"  text="{i18n>viewReport}" press="onCreditBlockPress"/>
											
											</HBox>
											
										</VBox>
								</l:BlockLayoutCell>
								<!--Incomplete Orders Card-->
								<l:BlockLayoutCell class="sapUiTinyMarginEnd sapUiTinyMarginTop sapUiNoContentPadding detailsCard newCardsColor1" width="1">
									<VBox>
											<HBox class="sapUiTinyMargin sapUiTinyMarginBottom" height="auto">
											<Label text="{i18n>incompleteOrders}" design="Bold" class=" sapUiSmallMarginBegin "/>
											</HBox>
											<HBox class="sapUiTinyMargin sapUiTinyMarginBottom sapUiNoMarginTop" height="auto">
												<Label text="{i18n>incompLog}"  class="orderDetailsHeaderText sapUiSmallMarginBegin "/>
													<Label text="10" design="Bold" class=" sapUiSmallMarginBegin "/>
											</HBox>
											<HBox class="sapUiTinyMargin sapUiTinyMarginTop sapUiMediumMarginBottom" height="auto">
													<Button class="sapUiLargeMarginBegin"  text="{i18n>viewReport}" press="onCreditBlockPress"/>
											
											</HBox>
												</VBox>
								</l:BlockLayoutCell>
								<!--Delivery blocked Orders Card-->
								<l:BlockLayoutCell class="sapUiTinyMarginEnd sapUiTinyMarginTop sapUiNoContentPadding detailsCard newCardsColor2" width="1">
									<VBox>
											<HBox class="sapUiTinyMargin sapUiTinyMarginBottom" height="auto">
											<Label text="{i18n>blockedOrders}" design="Bold" class=" sapUiSmallMarginBegin "/>
											</HBox>
											<HBox class="sapUiTinyMargin sapUiTinyMarginBottom sapUiNoMarginTop" height="auto">
												<Label text="{i18n>delBlocked}"  class="orderDetailsHeaderText sapUiSmallMarginBegin "/>
													<Label text="10" design="Bold" class=" sapUiSmallMarginBegin "/>
											</HBox>
											<HBox class="sapUiTinyMargin sapUiTinyMarginTop sapUiMediumMarginBottom" height="auto">
												<Button class="sapUiLargeMarginBegin"  text="{i18n>viewReport}" press="onCreditBlockPress"/>
											
											</HBox>
													</VBox>
									
								</l:BlockLayoutCell>
								<!--EDI Orders report Card-->
								
								<l:BlockLayoutCell width="1" class="sapUiTinyMarginEnd sapUiTinyMarginTop sapUiNoContentPadding detailsCard newCardsColor4">
									<VBox>
											<HBox class="sapUiTinyMargin sapUiTinyMarginBottom" height="auto">
											<Label text="{i18n>ediOrders}" design="Bold" class=" sapUiSmallMarginBegin "/>
											</HBox>
											<HBox class="sapUiTinyMargin sapUiTinyMarginBottom sapUiNoMarginTop" height="auto">
												<Label   class="orderDetailsHeaderText sapUiSmallMarginBegin "/>
													<Label  class=" sapUiSmallMarginBegin "/>
											</HBox>
											<HBox class="sapUiTinyMargin sapUiTinyMarginTop sapUiMediumMarginBottom" height="auto">
													<Button class="sapUiLargeMarginBegin"  text="{i18n>viewReport}" press="onCreditBlockPress"/>
											
											</HBox>
												</VBox>
								</l:BlockLayoutCell>
							</l:BlockLayoutRow>
						</l:BlockLayout>
						
						<!--	<OverflowToolbar>
							<ToolbarSpacer/>
						
							<Button type="Accept" text="{i18n>salesOrders}" press="onSalesPress"/>
						</OverflowToolbar>-->
						
							<Panel backgroundDesign="Transparent"  expandable="true" expanded="true" height="auto">
						
						<Table id="consumptionTable" class="sapUiResponsiveMargin " mode="SingleSelect" width="95%" items="{path : 'shipToModel>/ShipToPartySet'}" 
						 updateFinished="onUpdateFinished" selectionChange="onPressOrderNumber">
							<headerToolbar>
								
								<Toolbar class="overFlowToolbarBackground sapUiLargeMarginTop">
									<Title text="Stock for consumption"/>
									
									<ToolbarSpacer/>
									<!--<SearchField  search=".onSearchConsumption" width="50%"/>	
									<Button icon="sap-icon://download" press="_onDataExport"/>-->
									<Button icon="sap-icon://action-settings" press="_onPersoButtonPressed"/>
										<Button class="sapUiTinyMargin" id="expXmlBtn" press="onPostConsumption" text="Subsequent Documents" type="Transparent">
				
					<customData>
						<core:CustomData key="option" value="expXmlBtn"/>
					</customData>
				</Button>		
									<!--	<layoutData>
											<OverflowToolbarLayoutData priority="NeverOverflow"/>
										</layoutData>
									</Button>-->
									
								</Toolbar>
							</headerToolbar>
							<columns>
								
								<Column id="hadlingunitCol" visible="true"><Text text="{i18n>handlingUnit}"/></Column>
								<Column id="prodConsCol" visible="true" minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>prodConsumption}"/></Column>
								<Column id="stockprodCol" visible="true" minScreenWidth="Tablet" demandPopin="true" hAlign="Center"><Text text="{i18n>stockProd}"/></Column>
								<Column id="auomCol" visible="true" minScreenWidth="Tablet" demandPopin="true" hAlign="Center"><Text text="{i18n>auom}"/></Column>
								<Column id="descriptionCol" visible="true" hAlign="Center"><Text text="{i18n>description}"/></Column>
								<Column id="batchCol" visible="true"><Text text="{i18n>batch}"/></Column>
								<Column id="shelflifeCol" visible="false" minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>shelfLife}"/></Column>
								<Column id="origincountryCol" visible="false" minScreenWidth="Tablet" demandPopin="true" hAlign="Center"><Text text="{i18n>originCountry}"/></Column>
								<Column id="restrictedUseCol" visible="false" minScreenWidth="Tablet" demandPopin="true" hAlign="Center"><Text text="{i18n>restrictedUse}"/></Column>
								<Column id="stockTypeCol" visible="false" hAlign="Center"><Text text="{i18n>stockType}"/></Column>
								<Column id="stockTypeDescCol" visible="false"><Text text="{i18n>stockTypeDesc}"/></Column>
								<Column id="suppyareaprodCol" visible="false" minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>supplyAreaProd}"/></Column>
								<Column id="storageBinCol" visible="false" minScreenWidth="Tablet" demandPopin="true" hAlign="Center"><Text text="{i18n>storageBin}"/></Column>
								<Column id="ownerCol" visible="false" minScreenWidth="Tablet" demandPopin="true" hAlign="Center"><Text text="{i18n>owner}"/></Column>
							
								<Column id="valuationQuanCol" visible="false"><Text text="{i18n>valuation}"/></Column>
